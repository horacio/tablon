<article>
  <header>
    <h2>{{ job['title'] }}</h2>
    <ul>
      <li>{{ job['posted_on'] }}</li>
      <li>{{ job['company'] }}</li>
      <li>
        <a href="mailto:{{ job['email'] }}?subject={{ job['title'] }}">
          {{ job['email'] }}
        </a>
      </li>
    </ul>
  </header>
  <p>
    {{ job['description'] }}
  </p>
</article>
